app.config(
    ['$routeProvider', function($routeProvider) {
      $routeProvider.
          when('/app',              { templateUrl: '<%= asset_path('angular/templates/app/index.html') %>', displayHeader: true }).
          when('/app/meetings',     { templateUrl: '<%= asset_path('angular/templates/app/meetings/index.html') %>', displayHeader: true }).
          when('/app/meetings/:id', { templateUrl: '<%= asset_path('angular/templates/app/meetings/show.html') %>', displayHeader: false })
    }]
);