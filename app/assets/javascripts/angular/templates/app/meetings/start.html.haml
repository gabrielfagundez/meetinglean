.row
  .col-lg-8
    .box.box-default.meeting_summaries
      .box-header.with-border
        %h3.box-title Meeting Summary
      .box-body
        .item-list{ 'ng-repeat' => 'summary in currentMeeting().meeting_summaries' }
          .item{ 'ng-class' => 'itemClass(summary, "summary")', 'contenteditable' => 'true', 'ng-keyup' => 'keyup($event)', 'ng-keydown' => 'keydown($event)', 'ng-blur' => 'blur($event)', 'ng-focus' => 'focus($event)', 'data-id' => '{{ summary.id }}' }
            {{ summary.description }}
        .add-item{ 'ng-click' => 'addItem("meeting_summaries")' }
          %i.fa.fa-plus
          Add new summary line

  .col-lg-4
    .box.box-warning.meeting_agendas
      .box-header.with-border
        %h3.box-title Agenda
      .box-body
        .item-list{ 'ng-repeat' => 'agenda in currentMeeting().meeting_agendas' }
          .item{ 'ng-class' => 'itemClass(agenda, "agenda")' }
            {{ agenda.description }}

.row
  .col-lg-9
    .separator
  .col-lg-3
    .summary-controls-button{ 'ng-click' => 'toggleSummaryControls()' }
      %i.fa.fa-plus
      Hide/Show Advanced Components

.row.summary-controls.hide
