.sticky-footer
  .pull-left
    %a.btn
      %i.fa.fa-cogs
  .pull-right
    %a.btn
      %i.fa.fa-link
  %a.btn.btn-large{ 'ng-click' => 'endMeeting()' }
    %i.fa.fa-play
    End Meeting
