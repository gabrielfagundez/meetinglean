#meetings
  %section.content
    .row
      .col-lg-8
        .box.box-default.summary
          .box-header.with-border
            %h3.box-title Meeting Summary
          .box-body
            .item-list{ 'ng-repeat' => 'summary in currentMeeting.summary' }
              .item{ 'ng-class' => 'itemClass(summary, "summary")', 'contenteditable' => 'true', 'ng-keyup' => 'keyup($event)', 'ng-keydown' => 'keydown($event)', 'ng-blur' => 'blur($event)', 'ng-focus' => 'focus($event)', 'data-id' => '{{ summary.id }}' }
                {{ summary.description }}
            .add-item{ 'ng-click' => 'addSummary()' }
              %i.fa.fa-plus
              Add new summary line

      .col-lg-4
        .box.box-warning.agenda
          .box-header.with-border
            %h3.box-title Agenda
          .box-body
            .item-list{ 'ng-repeat' => 'agenda in currentMeeting.agenda' }
              .item{ 'ng-class' => 'itemClass(agenda, "agenda")' }
                {{ agenda.description }}

    .row
      .col-lg-12
        .separator
      .col-lg-4
        .box.box-default.meeting_decisions
          .box-header.with-border
            %h3.box-title Decisions
          .box-body
            .item-list{ 'ng-repeat' => 'item in currentMeeting.meeting_decisions' }
              .item{ 'ng-class' => 'itemClass(item, "meeting_decisions")', 'contenteditable' => 'true', 'ng-keyup' => 'keyup($event)', 'ng-keydown' => 'keydown($event)', 'ng-blur' => 'blur($event)', 'ng-focus' => 'focus($event)', 'data-id' => '{{ item.id }}' }
                {{ item.description }}
            .add-item{ 'ng-click' => 'addMeetingDecision()' }
              %i.fa.fa-plus
              Add new decision

      .col-lg-4
        .box.box-default.meeting_action_items
          .box-header.with-border
            %h3.box-title Action Items
          .box-body
            .item-list{ 'ng-repeat' => 'item in currentMeeting.meeting_action_items' }
              .item{ 'ng-class' => 'itemClass(item, "meeting_action_items")', 'contenteditable' => 'true', 'ng-keyup' => 'keyup($event)', 'ng-keydown' => 'keydown($event)', 'ng-blur' => 'blur($event)', 'ng-focus' => 'focus($event)', 'data-id' => '{{ item.id }}' }
                {{ item.description }}
            .add-item{ 'ng-click' => 'addMeetingActionItem()' }
              %i.fa.fa-plus
              Add new action item

      .col-lg-4
        .box.box-default.meeting_open_issues
          .box-header.with-border
            %h3.box-title Open Issues
