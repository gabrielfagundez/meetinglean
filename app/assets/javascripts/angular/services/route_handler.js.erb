app.factory('RouteHandler', [function() {

  var service = {
    getMeetingAgendaUrl: function() {
      return <%= "'#{ asset_path('templates/components/meeting_agenda_content.html')}'" %>;
    },
    meetingStatusTemplateUrl: function(meeting) {
      if(!meeting.started) {
        return <%= "'#{ asset_path('angular/templates/app/meetings/prepare.html')}'" %>
      } else if(meeting.finished) {
        return <%= "'#{ asset_path('angular/templates/app/meetings/summary.html')}'" %>
      } else {
        return <%= "'#{ asset_path('angular/templates/app/meetings/start.html')}'" %>
      }
    },
    getMeetingTimelineUrl: function() {
      return <%= "'#{ asset_path('templates/components/meeting_timeline.html')}'" %>;
    }
  };

  return service;
}]);