-#<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off" %>

.login-page-container
  .login-box
    .login-logo
      %b Meetlean
    .login-box-body
      %p.login-box-msg Sign up to Meetlean to start having rocking meetings
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group.has-feedback
          = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'form-control'
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .form-group.has-feedback
          = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation', class: 'form-control'
          %span.glyphicon.glyphicon-lock.form-control-feedback
        %br
        .row
          .col-xs-12
            = f.submit 'Sign up', class: 'btn btn-primary btn-block btn-flat'